.top-nav>li>a:hover,.top-nav>li>a:focus
    background-color #2c5976

.top-nav>li.purple>a:hover,.top-nav>li.purple>a:focus
    background-color #762c59

.top-nav>li.green>a:hover,.top-nav>li.green>a:focus
    background-color #2c7659

.top-nav>li.light-blue>a:hover,.top-nav>li.light-blue>a:focus
    background-color #579ec8

.top-nav .dropdown-menu li:hover,.dropdown-menu li a:hover, .dropdown-menu li a:focus
    background #f4f9fc

.dropdown-yellow li:hover,.dropdown-yellow li a:hover, .dropdown-yellow li a:focus
    background #fee188