html { height: 100%; }
body {
  min-height: 100%;
  position: relative;
  padding-bottom 0
  min-height 100%
  font-size 13px
  color #393939
  line-height 1.5
}
img
  max-width: 100%
/* layout */
.sidebar
    width 200px
    float left
    position relative
    border 1px solid #ccc
    border-width 0 1px 0 0
    background-color #f2f2f2
    &:before
        content ""
        display block
        width 200px
        position fixed
        bottom 0
        top 0
        z-index -1
        background-color #f2f2f2
        border 1px solid #ccc
        border-width 0 1px 0 0

.main-content
    margin-left 200px
    margin-right 0
    margin-top 0
    min-height 100%
    padding 0

.menu-min
    &.sidebar
        width 43px
        &:before
            width 43px

.menuCollapse
    .main-content
        margin-left 43px
        
/*面包屑导航*/
.bread-box
    position relative
    border-bottom 1px solid #e5e5e5
    background-color #f5f5f5
    min-height 41px
    line-height 40px
    padding 0 12px 0 0
    display block
    .glyphicon
        font-size 16px

.breadcrumb
    background-color transparent
    display inline-block
    line-height 24px
    margin 0 22px 0 12px
    padding 0
    font-size 13px
    color #333
    border-radius 0

.page-content
    background #fff
    margin 0
    padding 8px 20px 24px
    float left
    width 100%        